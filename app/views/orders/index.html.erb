<div class="container">
  <h4 id="notice"><%= notice %></h4>
  <br>
  <h1 id="COA">My Orders History</h1>
  <hr>
  <br><br>
  <table class="table">
    <thead class="thead-dark">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Email</th>
      <th scope="col">Pay type</th>
      <th scope="col">Order detail</th>
    </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.name %></td>
      <td><%= order.address %></td>
      <td><%= order.email %></td>
      <td><%= order.pay_type %></td>
      <td><%= link_to 'Show', order %></td>
    </tr>
    <% end %>
    </tbody>
  </table>

  <br><br><br><br><br><br>
  <%= link_to 'Back', home_index_url, class: 'btn btn-secondary btn-lg btn-block' %>
  <br><br><br>
</div>

