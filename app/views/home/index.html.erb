  <h1 class="text-center my-5 font-weight-bold">MONTHLY SPECIAL<hr></h1>

  <!--Card-->
  <div class="card-deck">

    <div class="card hover-shadow">
      <%= link_to image_tag('gourmet-gold-85g.jpg', class: "img"), controller: 'products', action: 'show', id: 36 %>
      <div class="card-body">
        <h5 class="card-title">Gourmet Gold 85g</h5>
      </div>
    </div>

    <div class="card hover-shadow">
      <%= link_to image_tag('dog-force-grip-ball.jpg', class: "img"), controller: 'products', action: 'show', id: 14 %>
