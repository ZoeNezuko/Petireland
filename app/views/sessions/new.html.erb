<div class="container">
  <h4 id="notice"><%= notice %></h4>
  <br>
  <h2>Login Or Create An Account</h2>
  <hr>
  <br>
  <br>

  <div class="row">
    <div class="col-lg-5 ">
      <div class="card">
        <div class="card-header">
          <h4>NEW HERE?</h4>
        </div>
        <div class="card-body">
          <p class="card-title text-muted">Registration is free and easy!</p>
          <p class="card-text">- Faster checkout</p>
          <p class="card-text">- Save multiple shipping addresses</p>
          <p class="card-text">- View and track orders and more</p>
          <br>
          <a href="http://localhost:3000/users/new" class="btn btn-primary">CREATE ONLINE ACCOUNT</a>
        </div>
      </div>
    </div>

    <div class="col-lg-2">

    </div>

    <div class="col-lg-5">

      <% if flash[:alert] %>
        <aside class="notice"><%= flash[:alert] %></aside>
      <% end %>

      <%= form_tag do %>
        <h2>ALREADY REGISTERED?</h2>
        <p class="text-muted">If you have an account with us, please log in. </p>
        <br>
        <div class="field">
          <%= label_tag :name, 'Name:' %><br>
          <%= text_field_tag :name, params[:name], size: 40 %>
        </div>

        <br>
        <div class="field">
          <%= label_tag :password, 'Password:' %><br>
          <%= password_field_tag :password, params[:password],size: 40 %>
        </div>

        <br>
        <div class="actions ">
          <%= submit_tag 'Login', class: 'btn btn-primary btn-lg' %>
        </div>
      <% end %>
    </div>

  </div>
</div>
<br><br><br><br><br>