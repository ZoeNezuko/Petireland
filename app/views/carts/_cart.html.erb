<article>
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>

  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5>Your Cart</h5>
      <table class="table">
        <tbody>
        <tr>
          <%= render(cart.line_items) %>
        </tr>
        <tr>
          <td>Total:</td>
          <td></td>
          <td class="price"><%= number_to_currency(cart.total_price) %></td>
        </tr>

        </tbody>
      </table>
    </div>

    <div class="card-body actions">
      <%= button_to 'Checkout', new_order_path, method: :get, class: "checkout btn btn-primary"%>
      &nbsp &nbsp &nbsp &nbsp &nbsp
      <%= button_to 'Empty cart', cart, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %>
    </div>
  </div>

</article>
